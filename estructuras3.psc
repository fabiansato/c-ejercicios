Algoritmo estructuras3
	horastrabajadas <- 1
	Mientras horastrabajadas!=0 Hacer
		Escribir 'Ingrese las horas trabajadas por el empleado:'
		Leer horastrabajadas
		dinero <- 150*horastrabajadas
		total <- total+dinero
		Escribir 'El dinero que recibe este empleado es: ',dinero
	FinMientras
	Escribir 'El total a pagar de todos los empleados es: ',total
FinAlgoritmo

